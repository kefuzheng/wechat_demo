<!--pages/form/form.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
        <view class="section__title">姓名：</view>
        <input name="user_name" placeholder="请输入您的姓名" />
        <view class="section__title">年龄：</view>
        <input name="user_age" placeholder="请输入您的年龄" />
        <view class="section__title">职业：</view>
        <input name="user_job" placeholder="请输入您的职业" />
        <view class="section__title">住址：</view>
        <input name="user_address" placeholder="请输入您的住址" />
    </view>
    <view class="section section_gap">
        <view class="section__title">性别</view>
        <radio-group name="user_sex">
            <label><radio value="男"/>男</label>
            <label><radio value="女"/>女</label>
        </radio-group>
    </view>
    <view class="btn-area">
        <button formType="submit">Submit</button>
        <button formType="reset">Reset</button>
    </view>
</form>
